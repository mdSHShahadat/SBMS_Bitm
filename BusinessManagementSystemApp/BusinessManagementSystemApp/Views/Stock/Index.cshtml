@model BusinessManagementSystemApp.Models.Models.ProductViewModel
@{
    ViewBag.Title = "Index";
}

<form method="post">
    <div class="container" style="margin-top:3%">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Product Records</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group row">
                            <div class="col-md-6">
                                <div class="col-md-4">
                                    Category
                                </div>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(c => c.CategoryId, ViewBag.Categories as SelectList, "--Select--", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="col-md-4">Start Date</div>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control", @placeholder = "Date" } })
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <div class="col-md-4">
                                    Product
                                </div>
                                <div class="col-md-8">
                                    <select id="ProductId" name="ProductId" class="form-control">
                                        <option value="">--Select--</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="col-md-4">End Date</div>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control", @placeholder = "Date" } })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <div class="col-md-5"></div>
                                <div class="col-md-7">
                                    @Html.CheckBoxFor(c => c.CheckReorder)
                                    Reorder Level
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="col-md-4"></div>
                                <div class="col-md-6">
                                    @Html.CheckBoxFor(c => c.ExpireProduct)
                                    Expired
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5"></div>
                            <div class="col-md-4"></div>
                            <div class="col-md-3">
                                <input type="submit" class="btn btn-block btn-success" value="Search" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-2"></div>
        </div>
        <div class="row">
            <table class="table table-bordered table-hover table-striped">
                <thead style="background-color:teal; color:white; text-align:center">
                    <tr>
                        <td>SL</td>
                        <td>Product(Code)</td>
                        <td>Product(Name)</td>
                        <td>Category</td>
                        <td>Reorder Level</td>
                        <td>Expire Date</td>
                        <td>Expire Quantity</td>
                        @*<td>Opening Balance</td>
                        <td>In</td>
                        <td>Out</td>
                        <td>Closing Balance</td>*@
                    </tr>
                </thead>
                @if (Model != null)
                {
                    <tbody style="text-align:center; font-weight:bold">
                        @{ int sl = 1;}
                        <tr>
                            <td>@(sl++)</td>
                            <td>@Model.ProductCode</td>
                            <td>@Model.ProductName</td>
                            <td>@Model.CategoryName</td>
                            <td>@Model.ReorderLevel</td>
                            <td>@Model.ExpireDate.ToShortDateString()</td>
                            <td>@Model.ExpiredQuantity</td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
</form>

@section Scripts{

    <script src="~/Scripts/Project Scripts/Stock Script/StockJs.js"></script>
    
}

