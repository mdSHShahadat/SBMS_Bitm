@model BusinessManagementSystemApp.Models.Models.ProductViewModel
@{
    ViewBag.Title = "ProductDetails";
}

<div class="container">
    <div class="row">
        <a style="margin-top:2%" href="/Product/Index" class="btn btn-info"><i class="glyphicon glyphicon-list"></i> Product List</a><hr />
    </div>
</div>
@if (ViewBag.Message != null)
{
    <h3 class="text-danger" align="center">@ViewBag.Message</h3>
}
@if (Model != null)
{
    <input type="hidden" name="ProductId" value="@Model.ProductId" />
    <input type="hidden" name="IsActive" value="True" />
    <input type="hidden" name="Date" value="@DateTime.Now.ToShortDateString()" />
    <div class="container" style="width:80%; margin-top:3%">
        <div class="col-md-8">
            <div class="form-group row">
                <div class="col-md-2"></div>
                <div class="col-md-3">
                    <label>Product Name</label>
                </div>
                <div class="col-md-5">
                    @Html.DisplayFor(c => c.ProductName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2"></div>
                <div class="col-md-3">
                    <label>Product Code</label>
                </div>
                <div class="col-md-5">
                    @Html.DisplayFor(c => c.ProductCode, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2"></div>
                <div class="col-md-3">
                    <label>Category</label>
                </div>
                <div class="col-md-5">
                    @Html.DisplayFor(c => c.CategoryName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2"></div>
                <div class="col-md-3">
                    <label>Reorder Level</label>
                </div>
                <div class="col-md-5">
                    @Html.DisplayFor(c => c.ReorderLevel, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2"></div>
                <div class="col-md-3">
                    <label>Description</label>
                </div>
                <div class="col-md-5">
                    @Html.DisplayFor(c => c.Description, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2"></div>
                <div class="col-md-3">

                </div>
                <div class="col-md-5">
                    <a href="/Product/UpdateProduct?id=@Model.ProductId" class="btn btn-block btn-success">Update</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            @*<div class="form-group row">
                <img src="@Url.Content(Model.ImagePath)" width="90%" height="150" style="border:1px solid red" />
            </div>*@
            <div class="card" style="width:18rem;">
                <img class="card-img-top" src="@Url.Content(Model.ImagePath)"  width="90%" height="150"  alt="Product Image" />
                <div class="card-body">
                    <p class="card-text" style="text-align:center">
                        <br />
                        <b style="color:steelblue">@Model.ProductName</b>
                    </p>
                </div>
            </div>
        </div>
    </div>
}
